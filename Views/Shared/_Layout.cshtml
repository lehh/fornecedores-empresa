<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>@ViewData["Title"] - FornecedoresEmpresa</title>

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />

    @RenderSection("Head", required: false)
</head>
<body>
    <div class="container" style="padding:1px;">
        <nav class="navbar navbar-dark bg-dark">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link navbar-brand" href="@Url.Action("Index", "Empresa")">Empresas <span class="sr-only">(current)</span></a>
                    <a class="nav-link navbar-brand" href="@Url.Action("Index", "Fornecedor")">Fornecedores</a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="container shadow-lg" style="background:white; padding:1%;">
        @if (TempData["Mensagem"] != null)
        {
            <div class="alert alert-primary" role="alert">
                @TempData["Mensagem"]

                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @RenderBody()
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>