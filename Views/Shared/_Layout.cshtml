<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>@ViewData["Title"] - FornecedoresEmpresa</title>

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />

    <style>
        .nav-link.active {
            background-color: rgba(0, 0, 0, 0.16);
            border-radius: 5%;
        }

        .btn-primary {
            color: #fff;
            background-color: #1b477b;
            border-color: #1d508c;
        }

        .modal-content {
            background-color: #212529;
        }

        .field-validation-error {
            color: red;
            font-size: smaller;
        }

        .close {
            float: right;
            font-size: 1.8rem;
            font-weight: 900;
            line-height: 1;
            color: #f00;
            text-shadow: 0 3px 2px #000000;
            opacity: .5;
        }

            .close:hover {
                color: #bfbfbf;
            }
    </style>

    @RenderSection("Head", required: false)
</head>
<body style="background-color: #1d2124; color: #f8f9fa">
    <div class="container" style="padding:1px;">
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #1b477b !important; ">
            <ul class="navbar-nav">
                <li class="nav-item" id="navItemEmpresa">
                    <a class="nav-link navbar-brand" href="@Url.Action("Index", "Empresa")">Empresas <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item" id="navItemFornecedor">
                    <a class="nav-link navbar-brand" href="@Url.Action("Index", "Fornecedor")">Fornecedores</a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="container shadow-lg" style="background:#212529; padding:1%;">
        @if (TempData["Mensagem"] != null)
        {
            <div class="alert alert-primary" role="alert">
                @TempData["Mensagem"]

                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @RenderBody()
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $('a[href$="' + location.pathname + '"]').not('.btn').addClass('active');
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>

</html>