@model FornecedoresEmpresa.ViewModel.EmpresaViewModelCadastro

@{
    ViewData["Title"] = "Cadastrar Empresa";
}

@section scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<div class="row">
    <div class="col mb-3">
        <h2>Cadastrar Empresa</h2>
    </div>
</div>

@using (Html.BeginForm("Cadastrar", "Empresa", FormMethod.Post))
{
    <div class="form-group row">

        @Html.LabelFor(m => m.NomeFantasia, new { @class = "col-form-label col-lg-2" })

        <div class="col-lg-5 col-10">
            @Html.EditorFor(m => m.NomeFantasia, new { htmlAttributes = new { @class = "form-control" } })

            @Html.ValidationMessageFor(m => m.NomeFantasia)
        </div>

    </div>

    <div class="form-group row">

        @Html.LabelFor(m => m.Uf, new { @class = "col-form-label col-lg-2" })

        <div class="col-lg-1 col-sm-2 col-3">
            @Html.EditorFor(m => m.Uf, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="mr-2">
            @Html.ValidationMessageFor(m => m.Uf)
        </div>

    </div>

    <div class="form-group row">

        @Html.LabelFor(m => m.Cnpj, new { @class = "col-form-label col-lg-2" })

        <div class="col-sm-4 col-3">
            @Html.EditorFor(m => m.Cnpj, new { htmlAttributes = new { @class = "form-control" } })

            @Html.ValidationMessageFor(m => m.Cnpj)
        </div>

    </div>

    <div class="form-group row">

        @Html.LabelFor(m => m.ListaIdFornecedor, new { @class = "col-form-label col-lg-2" })
        
        <div class="col-6">
            @Html.ListBoxFor(m => m.ListaIdFornecedor, Model.SelectListaFornecedor, new { @class = "custom-select" })
        </div>

    </div>

    <div class="form-group row">
        <div class="col mb-5">
            <button class="btn btn-success" type="submit">Cadastrar</button>
        </div>
    </div>
}

<div class="form-group row">
    <div class="col">
        <a class="btn btn-sm btn-secondary" href="@Url.ActionLink("Index")">Voltar</a>
    </div>
</div>
