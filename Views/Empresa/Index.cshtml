@model IEnumerable<FornecedoresEmpresa.Models.Empresa>

@{
    ViewData["Title"] = "Empresas";
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $('#modalExcluir').on('shown.bs.modal', function (event) {
                let idEmpresa = event.relatedTarget.dataset.id;
                let href = "@Url.Action("Excluir","Empresa")/" + idEmpresa;
                $(this).find("#btnExcluir").attr("href", href);
            });
        });
    </script>
}
<div class="row">
    <div class="col mb-5">
        <a href="@Url.ActionLink("Cadastrar")" class="btn btn-success"> Nova Empresa </a>
    </div>
</div>

<main class="table-responsive">
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Nome Fantasia</th>
                <th>UF</th>
                <th>CNPJ</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var empresa in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => empresa.NomeFantasia)</td>
                    <td>@Html.DisplayFor(modelItem => empresa.Uf)</td>
                    <td>@Html.DisplayFor(modelItem => empresa.Cnpj)</td>
                    <td>
                        @Html.ActionLink("Detalhes", "Detalhes", new { id = empresa.Id }, new { @class = "btn btn-sm btn-info" })
                        @Html.ActionLink("Alterar", "Alterar", new { id = empresa.Id }, new { @class = "btn btn-sm btn-secondary" })
                        <button type="button" data-toggle="modal" data-target="#modalExcluir" data-id="@empresa.Id" class="btn btn-sm btn-danger">Excluir</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>

<div class="modal" id="modalExcluir" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Excluir Empresa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Quer realmente excluir essa empresa?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <a href="#" id="btnExcluir" class="btn btn-danger">Excluir</a>
            </div>
        </div>
    </div>
</div>
