@model FornecedoresEmpresa.ViewModel.EmpresaViewModelAlterar

@{
    ViewData["Title"] = "Alterar Empresa";
}

<h1>Alterar Empresa @Model.NomeFantasia</h1>

@TempData["Mensagem"]

@using (Html.BeginForm("Alterar", "Empresa", FormMethod.Post))
{
    @Html.LabelFor(m => m.NomeFantasia)

    @Html.EditorFor(m => m.NomeFantasia)

    @Html.ValidationMessageFor(m => m.NomeFantasia)

    @Html.LabelFor(m => m.Uf)

    @Html.EditorFor(m => m.Uf)

    @Html.ValidationMessageFor(m => m.Uf)

    @Html.LabelFor(m => m.Cnpj)

    @Html.EditorFor(m => m.Cnpj)

    @Html.ValidationMessageFor(m => m.Cnpj)

    @Html.LabelFor(m => m.ListaIdFornecedor)

    <select multiple name="@nameof(Model.ListaIdFornecedor)">
        @foreach (var fornecedor in Model.SelectListaFornecedor)
        {
            <option value="@fornecedor.Value" selected="@fornecedor.Selected">@fornecedor.Text</option>
        }
    </select>

    <button type="submit">Alterar</button>
}

<a href="@Url.ActionLink("Index")">Voltar</a>

